    "apollo-server-express": "^2.19.2",
    "babel-plugin-module-resolver": "^4.1.0",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1"
  },
  "devDependencies": {
    "babel-watch": "^7.3.0"
  }
}
